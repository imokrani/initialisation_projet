<?xml version="1.0" encoding="utf-8"?>

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollbar_shape_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

<LinearLayout
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Nom " 
            android:textColor="#000000"/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Nom" android:id="@+id/nomCient" />

	    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Prenom " 
            android:textColor="#000000"/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Prenom" android:id="@+id/prenomClient" />

	    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Email " 
            android:textColor="#000000"/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Email" android:id="@+id/mailClient" />

	    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Login" 
            android:textColor="#000000"/>
		<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Login" android:id="@+id/loginClient" />
	    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Mot de passe " 
            android:textColor="#000000"/>
				<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Mot de passe" android:id="@+id/motPasseClient" />
		
				    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Téléphone " 
            android:textColor="#000000"/>
					<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Telephone" android:id="@+id/idTelephoneClient" />
		
				
				    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Adresse " 
            android:textColor="#000000"/>
						<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="adresse" android:id="@+id/adresse" />
		
				
			    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Complément Adresse" 
            android:textColor="#000000"/>	
				
						<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Complement adresse" android:id="@+id/complementAdresse" />
		
				
		    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Code postal" 
            android:textColor="#000000"/>		
				
						<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Code Postal" android:id="@+id/codePostal" />
		
				
		    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Ville " 
            android:textColor="#000000"/>		
				
						<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Ville" android:id="@+id/ville" />
		
				
				
			    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Numéro de la boite aux lettres" 
            android:textColor="#000000"/>	
						<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Numero bite aux lettre" android:id="@+id/numeroBal" />
		
				
	



	
	
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Ajouter ce Client"
		android:id="@+id/ajouter_client" />

</LinearLayout>
</ScrollView>
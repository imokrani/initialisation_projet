<?xml version="1.0" encoding="utf-8"?>
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollbar_shape_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >
 <LinearLayout 
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	style="@style/scrollbar_shape_style"> 

	
       <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Nom" 
            android:textColor="#fff"/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Nom" android:id="@+id/nomLivreur" />
   <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Prenom"
            android:textColor="#fff" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Prenom" android:id="@+id/prenomLivreur" />
   <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Email"
            android:textColor="#fff" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Email" android:id="@+id/mailLivreur" />
   <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Login de connexion" 
            android:textColor="#fff"/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Login"  android:id="@+id/loginLivreur" />
	   <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Mot de passe" 
            android:textColor="#fff"/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Mot de passe" android:inputType="textPassword" android:id="@+id/motPasseLivreur" />
		   <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Confirmer votre mot de passe" 
            android:textColor="#fff"/>
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Confirmation mot de passe" android:inputType="textPassword" android:id="@+id/ConfirmationmotPasseLivreur" />
	
	   <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Numero de Téléphone"
            android:textColor="#fff" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="Telephone"
		android:id="@+id/telephoneLivreur" />



	
	
	    <Button
            android:id="@+id/ajouterLivreurMainteant"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#ff6347"
            android:text="Ajouter ce Livreur"
            android:textColor="#fff" />

 </LinearLayout> 
</ScrollView>

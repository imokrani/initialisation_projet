<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.cgi.poc"
  android:versionCode="1"
  android:versionName="1.0" >

  <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="21"/>

  <!-- ACTIVATION DE LA CAMERA -->
  <uses-permission android:name="android.permission.CAMERA" />
  <uses-feature android:name="android.hardware.camera" />
  
  <application
    android:name="org.cgi.poc.VaiablesGlobales"
    android:icon="@drawable/ic_logo"
    android:label="@string/app_name"
    android:theme="@style/AppTheme" >
    
     <!-- LANCER L'ACTIVITE   org.cgi.poc.board -->
     
    <activity android:name=".BoardActivity"
              android:label="@string/home_poc_cgi_boards">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>  
     
    <!-- AJOUTER UN BOARD  --> 
   <activity android:name=".AjouterBordActivity"
      android:label="@string/ajouter_bord">
      <meta-data android:name="android.support.PARENT_ACTIVITY"
        android:value=".BoardActivity"/>
    </activity>
    
    <activity android:name=".DataAccueilActivity"
      android:label="">
      <meta-data android:name="android.support.PARENT_ACTIVITY"
        android:value=".BoardActivity"/>
    </activity>
   
   
   
     <!-- L'ACTIVITE PRINCIPALE QUI SE LANCEE AU DEMARRAGE DE L'APPLICATION -->  
       
    <activity android:name=".DataMenuActivity"
              android:label="">
      		  <meta-data android:name="android.support.PARENT_ACTIVITY"
        			     android:value=".DataAccueilActivity"/>  
    </activity> 
    
    <!-- L'ACTIVITE QUI PERMET DE CREER UNE DATA DE TOUT TYPE   IMAGE SON VIDEO TEXTE -->
    <activity
      android:name=".DataActivity"
      android:label="@string/creer_date" >
      <meta-data android:name="android.support.PARENT_ACTIVITY"
        android:value=".DataMenuActivity"/>
    </activity>
    
    
    <!-- 
         EDITION DES DATA DANS UN PAGER QUI PREND TOUTE LA SURFACE D'UNE FENTREE 
         QUI PERMET DE PASSER D'UNE PAGE A UNE AUTRE 
               
     -->
    <activity android:name=".DataPagerActivity"
      android:label="@string/app_name">
      <meta-data android:name="android.support.PARENT_ACTIVITY"
        android:value=".DataMenuActivity"/>
    </activity>
    
    <activity android:name=".ListeNotesActivity"
      android:label="@string/app_name">
      <meta-data android:name="android.support.PARENT_ACTIVITY"
        android:value=".DataAccueilActivity"/>
    </activity>
    
    
    
     <activity android:name=".CreateNotesActivity"
      android:label="@string/app_name">
      <meta-data android:name="android.support.PARENT_ACTIVITY"
        android:value=".ListeNotesActivity"/>
    </activity>
    
    <!-- ACTIVITE QUI GERE LA CAMERA -->
    <activity android:name=".DataCameraActivity"
		android:screenOrientation="landscape"
		android:label="@string/app_name">
	</activity>
    
    
  </application>

</manifest>
